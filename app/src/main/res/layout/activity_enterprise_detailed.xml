<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.empresa.jlvg89.empresa.activities.EnterpriseDetailedActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_enterprise_detailed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/medium_pink"
        android:gravity="left"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageButton
            android:id="@+id/ib_enterprise_detailed_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foregroundGravity="left"
            android:background="@color/medium_pink"
            android:src="@drawable/ic_arrow_back"/>
        <TextView
            android:id="@+id/tv_enterprise_detailed_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="34.5dp"
            android:textSize="17sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="#ffffff"
            android:text="TextView"/>
    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/iv_enterprise_detailed_logo"
        android:layout_width="319dp"
        android:layout_height="160dp"
        android:layout_marginTop="8dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintBottom_toTopOf="@+id/sv_enterprise_detailed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tb_enterprise_detailed" />

    <ScrollView
        android:id="@+id/sv_enterprise_detailed"
        android:layout_width="match_parent"
        android:layout_height="271dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <TextView
            android:id="@+id/tv_enterprise_detailed_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="TextView" />
    </ScrollView>

</android.support.constraint.ConstraintLayout>
